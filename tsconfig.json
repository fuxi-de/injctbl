{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/**"]
}
